<% include partials/header %>

<div class="container">
    <h1 class="text-center">Current Budgets</h1>
</div>

<canvas id="myChart" width="400" height="400"></canvas>

<script src="/apps/charts/Chart.min.js"></script>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [

            <% budgets.forEach(function(budget) { %>
            '<%=budget.name%>',
            <% });%>

        ],
        datasets: [{
            label: 'monthly budgets',
            data: [ 

                <% budgets.forEach(function(budget) { %>
                <%=budget.quantity%>,
                <% });%>
            
            ],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>

<div class="container" style="margin-top: 2.5em">
    <h3> Current budgets: </h3>
       
       
      
    <% budgets.forEach(function(budget) { %>
    <li class="list-group-item"> <%= budget.name %> - <%= budget.quantity%>

    <% }); %>

    </table>
</div>

