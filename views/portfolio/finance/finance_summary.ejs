<% include partials/header %>

<div class="container">

    <div class="row mt-3 d-flex align-items-flex">
        <div class="chart-container col-6">
            <canvas id="myChart"></canvas>
        </div>
        <div class="col-6">
            <% budgets.forEach(function(budget) { %>
            <li class="list-group-item"> <%= budget.name %> - <%= budget.quantity%>
                <% }); %>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6 pink" style="height:300px;">

            <% periodics.forEach(function(item) { %>
            <li class="list-group-item"> <%= item.name %> - <%= item.quantity%> -- paid on:  <%= item.day %> </li>

            <% }); %>

        </div>
    </div>
    <script src="/apps/charts/Chart.min.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: [

            <% budgets.forEach(function(budget) { %>
                    '<%=budget.name%>',
                    <% });%>

        ],
        datasets: [{
            label: 'monthly budgets',
            data: [ 

                <% budgets.forEach(function(budget) { %>
                        <%=budget.quantity%>,
                        <% });%>

            ],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderWidth: 0
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
    }
});
    </script>


    <% include partials/footer %>
